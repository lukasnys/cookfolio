---
import "@/styles/index.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} â€” Cookfolio</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,600;1,400&family=Instrument+Serif:ital@0;1&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen">
    <header
      class="border-b border-parchment bg-cream-dark/60 backdrop-blur-sm sticky top-0 z-50"
    >
      <nav class="mx-auto flex max-w-3xl items-center justify-between px-6 py-4">
        <a href="/cookfolio/" class="font-display text-2xl text-ink hover:text-terracotta transition-colors">
          Cookfolio
        </a>
        <div class="flex gap-6 text-sm font-medium">
          <a
            href="/cookfolio/"
            class:list={[
              "transition-colors hover:text-terracotta",
              currentPath === "/cookfolio/" || currentPath === "/cookfolio"
                ? "text-terracotta"
                : "text-ink-light",
            ]}
          >
            Recipes
          </a>
          <a
            href="/cookfolio/weekly-planner/"
            class:list={[
              "transition-colors hover:text-terracotta",
              currentPath.includes("weekly-planner")
                ? "text-terracotta"
                : "text-ink-light",
            ]}
          >
            Weekly Planner
          </a>
        </div>
      </nav>
    </header>

    <main class="mx-auto max-w-3xl px-6 py-10">
      <slot />
    </main>

    <footer class="border-t border-parchment mt-16">
      <div class="mx-auto max-w-3xl px-6 py-6 text-center text-sm text-warm-gray">
        Cookfolio
      </div>
    </footer>
  </body>
</html>
